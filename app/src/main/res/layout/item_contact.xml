<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_item_contact"
    >
    
    <ImageView
        android:id="@+id/img_contact_photo"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:id="@+id/txt_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content Name"
            android:textStyle="bold"
            android:textAllCaps="false"
            />
        <TextView
            android:id="@+id/txt_conttact_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Name Here"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        >

        <ImageView
            android:id="@+id/img_contact_phone_icon"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#000"
            />

    </LinearLayout>

</LinearLayout>